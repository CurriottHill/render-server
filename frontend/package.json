{
  "name": "chrome-extension-template",
  "version": "0.1.0",
  "private": true,
  "description": "Beginner-friendly Chrome Extension template using React + Vite",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && vite build -c vite.content.config.js",
    "watch": "vite build --watch && vite build -c vite.content.config.js --watch",
    "preview": "vite preview",
    "build:watch": "vite build && vite build -c vite.content.config.js --watch"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "4.3.3",
    "sass": "1.77.8",
    "vite": "5.4.2"
  }
}
