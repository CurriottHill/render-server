{
  "manifest_version": 3,
  "name": "React Vite Extension",
  "version": "0.1.0",
  "description": "Beginner-friendly Chrome Extension template using React + Vite.",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_title": "Open Popup",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}